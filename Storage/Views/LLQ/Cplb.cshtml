
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cplb</title>
</head>
<body>
    <div>
        <table>
            <tr>
                <td><a href="#">首页<</a></td>
                <td>基本资料<</td>
                <td>产品类别</td>
            </tr>
        </table>
        <table>
            <tr>
                <td><strong style="margin-left:20px">产品类别管理</strong></td>
                <td> <input style="margin-left:1200px;" id="btnSubhh" class="btn btn-primary" type="button" value="新增" /></td>
                <td> <input style="margin-left:10px;" id="btnSub" class="btn btn-success" type="button" value="删除" /></td>
                <td> <input style="margin-left:10px;" id="btnSub" class="btn btn-warning" type="button" value="导出" /></td>
            </tr>
        </table>
        <table action="javascript:void(0)" class="form-horizontal">
            <tr>
                <td><input id="txtSearch" type="text" class="input-group" placeholder="请输入类别编号或者名称"></td>
                <td>
                    <a style="margin-left:10px" id="gritter-remove-all" class="btn btn-info" href="javascript:void(0)" onclick="User.PageClick(1)">搜索</a>
                </td>
                <td>
                    <button style="margin-left:10px" id="btnHSearch" data-toggle="dropdown" class="btn btn-primary">高级搜索<span class="caret"></span></button>
                </td>
            </tr>
        </table>
        <div class="widget" hidden>
            <table>
                <tr>
                    <td> <label for="firstName" class="control-label">员工编号</label></td>
                    <td> <input id="txtUserCode" name="txtUserCode" type="text" class="span12"></td>
                </tr>
                <tr>
                    <td><label for="firstName" class="control-label">员工姓名</label></td>
                    <td><input id="txtUserName" name="txtUserName" type="text" class="span12"></td>
                </tr>
                <tr>
                    <td><label for="firstName" class="control-label">部门</label></td>
                    <td>
                        <select id="ddlDepart" name="ddlDepart" class="input-medium">
                            <option value="">请选择部门</option>
                            <option value="000001">质量部门</option>
                            <option value="000002">仓库部门</option>
                            <option value="000003">采购部门</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td><label for="firstName" class="control-label">角色</label></td>
                    <td>
                        <select id="ddlRole" name="ddlRole" class="input-medium">
                            <option value="">请选择角色</option>
                            <option value="DR_0000">系统管理员</option>
                            <option value="000001">仓管员</option>
                            <option value="000002">采购员</option>
                            <option value="000003">门卫</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td><label for="firstName" class="control-label">&nbsp;&nbsp;</label></td>
                    <td><a class="btn btn-info" href="javascript:void(0)" onclick="User.PageClick(1)"><i class="icon-search"></i>&nbsp;搜索</a></td>
                </tr>
            </table>
        </div>
    </div>
    <table style="width:100%;" class="table table-bordered">
        <thead>
        <thead>
            <tr class="widget-title">
                <th style="width: 8px;"><input type="checkbox" class="group-checkable" onclick="Category.SelectAll(this)" /></th>
                <th class="hidden-480">类别编号</th>
                <th class="hidden-480">类别名称</th>
                <th class="hidden-480">创建人</th>
                <th class="hidden-480">创建时间</th>
                <th class="hidden-480">备注</th>
                <th>操作</th>
            </tr>
        </thead>

        <tbody id="tb1"></tbody>
    </table>
    <div hidden id="yyyyy" style="margin-left:500px;">
        <table class="formtab_user">
            <tbody>
                <tr>
                    <td>类别编号</td>
                    <td>
                        <input id="txtCpId" name="txtCpId" type="text" placeholder="自动生成,可不填" class="input-medium" disabled="disabled">
                    </td>
                </tr>
                <tr>
                    <td>类别名称</td>
                    <td>
                        <input id="txtCpLbName" name="txtCpLbName" type="text" placeholder="请输入密码" class="input-medium">
                    </td>
                </tr>
                <tr>
                    <td>备注</td>
                    <td>
                        <input id="txtremark" name="txtremark" type="text"  class="input-medium">
                    </td>
                </tr>
            </tbody>
            <tr>
                <td><input id="Button1" type="button" style="margin-left:0px" value="确认" /></td>
                <td><input id="Button1_1" type="button" style="margin-left:10px" value="取消" /></td>
            </tr>
        </table>
    </div>
</body>
</html>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    $(function () {
        $("#btnSubhh").click(function () {
            if ($("#yyyyy").css("display") == "none") {
                $("#yyyyy").show();

            } else {
                $("#yyyyy").hide();
            }
        });
        $("#Button1_1").click(function () {
            $("#yyyyy").hide();
        });
        $("#btnHSearch").click(function () {
            if ($(".widget").css("display") == "none") {
                $(".widget").show();

            } else {
                $(".widget").hide();
            }
        })
    });

</script>

