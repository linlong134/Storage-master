    <div hidden id="yyyyy" style="margin-left:500px;">
        <table class="formtab_user">
            <tbody>
                <tr>
                    <td>产品编号</td>
                    <td>
                        <input id="txtUserCode" name="txtUserCode" type="text" placeholder="自动生成,可不填" class="input-medium" disabled="disabled">
                    </td>
                    <td>产品条码</td>
                    <td>
                        <input id="txtUserName" name="txtUserName" type="text" class="input-medium">
                    </td>
                </tr>
                <tr>
                    <td>产品名称</td>
                    <td>
                        <input id="txtPassword" name="txtPassword" type="password" class="input-medium">
