                    </td>
                    <td>预警下限</td>
                    <td>
                        <input id="txtUserName" name="txtUserName" type="text" placeholder="0" class="input-medium">
                    </td>
                </tr>

                <tr>
                    <td>规格</td>
                    <td>
                        <input id="txtPassword" name="txtPassword" type="password" class="input-medium">
                    </td>
                    <td>单位</td>
                    <td>
                        <select id="ddlRole" name="ddlRole" class="input-medium" style="width:164px;">
                            <option value="">请选择单位</option>
                            <option value="DR_0000">千克</option>
                            <option value="000001">吨</option>
                            <option value="000002">克</option>
                            <option value="000003">升</option>
                        </select>
                    </td>
                </tr>

                <tr>
                    <td>价格</td>
                    <td>
                        <input id="txtPassword" name="txtPassword" type="password" class="input-medium">
                    </td>
                    <td>客户</td>
                    <td>
                        <select id="ddlRole" name="ddlRole" class="input-medium" style="width:164px;">
                            <option value="">请选择客户</option>
                            <option value="DR_0000">阿里巴巴</option>
                            <option value="000001">腾讯</option>
                            <option value="000002">网易</option>
                        </select>
                    </td>
                </tr>

                <tr>
                    <td>默认仓库</td>
                    <td>
                        <select id="ddlRole" name="ddlRole" class="input-medium" style="width:164px;">
                            <option value="">请选择仓库</option>
                            <option value="DR_0000">系统管理员</option>
                            <option value="000001">仓管员</option>
                            <option value="000002">采购员</option>
                            <option value="000003">门卫</option>
                        </select>
                    </td>
                    <td>默认库位</td>
                    <td>
                        <select id="ddlRole" name="ddlRole" class="input-medium" style="width:164px;">
                            <option value="">请选择库位</option>
                            <option value="DR_0000">系统管理员</option>
