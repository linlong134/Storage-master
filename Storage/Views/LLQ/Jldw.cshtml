
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/MainPage.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Jldw</title>
</head>
<body>
    <div>
        <table>
            <tr>
                <td><a href="#">首页<</a></td>
                <td>基本资料<</td>
                <td>计量单位</td>
            </tr>
        </table>
        <table>
            <tr>
                <td><strong style="margin-left:20px">计量单位</strong></td>
                <td> <input style="margin-left:1200px;" id="btnSubhh" class="btn btn-primary" type="button" value="新增" /></td>
                <td> <input style="margin-left:10px;" id="btnSub" class="btn btn-success" type="button" value="删除" /></td>
                <td> <input style="margin-left:10px;" id="btnSub" class="btn btn-warning" type="button" value="导出" /></td>
            </tr>
        </table>
        <table action="javascript:void(0)" class="form-horizontal">
            <tr>
                <td><input id="txtSearch" type="text" class="input-group" placeholder="请输入单位编名或者名称"></td>
                <td>
                    <a style="margin-left:10px" id="gritter-remove-all" class="btn btn-info" href="javascript:void(0)" onclick="User.PageClick(1)">搜索</a>
                </td>
                <td>
                    <button style="margin-left:10px" id="btnHSearch" data-toggle="dropdown" class="btn btn-primary">高级搜索<span class="caret"></span></button>
                </td>
            </tr>
        </table>
    </div><div class="jbox-button-panel" style="height:25px;padding:5px 0 5px 0;text-align: right;"><span class="jbox-bottom-text" style="float:left;display:block;line-height:25px;"></span><button class="jbox-button jbox-button-focus" value="true" style="padding:0px 10px 0px 10px;">确定</button><button class="jbox-button" value="false" style="padding:0px 10px 0px 10px;">关闭</button></div>
    <table style="width:100%;" class="table table-bordered">
        <thead>
            <tr>
                <th class="hidden-480">序号</th>
                <th class="hidden-480">编号</th>
                <th class="hidden-480">名称</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody id="tb1"></tbody>
    </table>
    <div hidden id="yyyyy" style="margin-left:500px;">
        <table class="formtab_user">
            <tbody>
                <tr>
                    <td>编号</td>
                    <td>
                        <input id="txtJlid" name="txtJlid" type="text" placeholder="自动生成,可不填" class="input-medium" disabled="disabled" value="">
                    </td>
                </tr>
                <tr>
                    <td>名称</td>
                    <td>
                        <input id="txtJlName" name="txtJlName" type="text" placeholder="请输入计量单位名称" class="input-medium" value="">
                    </td>
                </tr>

            <td><input id="Button1" type="button" style="margin-left:0px" value="确认" /></td>
            <td><input id="Button1_1" type="button" style="margin-left:10px" value="取消" /></td>

        </table>
    </div>
</body>
</html>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    $(function () {
        $("#btnSubhh").click(function () {
            if ($("#yyyyy").css("display") == "none") {
                $("#yyyyy").show();

            } else {
                $("#yyyyy").hide();
            }
        });
        $("#Button1_1").click(function () {
            $("#yyyyy").hide();
        });
        $("#btnHSearch").click(function () {
            if ($(".widget").css("display") == "none") {
                $(".widget").show();

            } else {
                $(".widget").hide();
            }
        })
    });

</script>


